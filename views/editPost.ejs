<%- include("partials/header.ejs") %>

<% blog.forEach((entry) => { %>

  <% if(entry.id == postId) { %>
              
    <div class="col-md-4">
      <div class="position-sticky" style="top: 2rem;">
        <div class="p-4 mb-3 bg-body-tertiary rounded">
          <h4 class="fst-italic">Edit your blog post:</h4>
            <form action="/editBlogEntry" method="POST">
              <div class="mb-3">
                <input class="form-control" id="exampleFormControlInput1" type="text" name="title" value="<%= entry.title %>">
              </div>
              <div class="mb-3">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" type="text" name="blogText" value=""><%= entry.blog_entry %></textarea>
                <input type="hidden" name="postId" value="<%- entry.id %>">
                <input class="btn btn-dark" type="submit" value="Edit">
              </div>
            </form>
        </div>
      </div>
    </div>
    
  <%} %>
<%}) %>

<%- include("partials/footer.ejs") %>